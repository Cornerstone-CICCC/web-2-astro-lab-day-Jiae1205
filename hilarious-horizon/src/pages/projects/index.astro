---
import MainLayout from "../../layouts/Layout.astro";
import { getCollection } from "astro:content";

const projects = await getCollection('projects');
---
<MainLayout title="Projects | Hilarious Horizon">
  <h1>Projects</h1>
  <div class="grid">
    {projects.map((p) => (
      <article class="card">
        <h3>{p.data.title}</h3>
        <p class="muted">by {p.data.author}</p>
        <a href={`/projects/${p.data.id}`}>Read More â†’</a>
      </article>
    ))}
  </div>
</MainLayout>
